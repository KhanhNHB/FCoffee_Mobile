<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp5"
        android:padding="@dimen/dp5"
        android:weightSum="12">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@drawable/custom_frame_border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtBillInfoProductName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mặt hàng" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="3"
            android:background="@drawable/custom_frame_border"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBillInfoProductUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="đơn giá" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp20"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:background="@drawable/custom_frame_border"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBillInfoProductQuantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="3"
            android:background="@drawable/custom_frame_border"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBillInfoProductTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thành tiền" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>