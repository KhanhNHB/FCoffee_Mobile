<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@color/colorMain"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp8"
            android:layout_weight="1.0"
            android:src="@drawable/ic_keyboard_backspace_black_24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp10"
            android:layout_weight="8.0"
            android:background="@drawable/custom_form_search"
            android:orientation="horizontal"
            android:weightSum="10">

            <EditText
                android:id="@+id/txt_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9.0"
                android:background="@null"
                android:hint="Tìm sản phẩm, thể loại hay giá tiền mong muốn"
                android:padding="@dimen/dp10"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/custom_form_search"
                android:src="@drawable/ic_search" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_add_drink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp8"
            android:layout_weight="1.0"
            android:src="@drawable/ic_notifications" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/catgories_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_drinks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <Button
            android:id="@+id/btn_check_in"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_next_step"
            android:text="Xác nhận"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp16" />

    </LinearLayout>
</LinearLayout>