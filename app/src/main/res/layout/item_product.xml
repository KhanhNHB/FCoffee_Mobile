<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_drink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp16"
                android:background="@drawable/custom_frame_input"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_gravity="center_horizontal"
                        android:padding="2dp"
                        android:layout_width="@dimen/dp150"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/dp120"/>
                    <ImageView
                        android:src="@drawable/custom_frame_border"
                        android:layout_width="@dimen/dp150"
                        android:layout_height="@dimen/dp120"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cocacola"
                        android:textColor="@color/colorBottomIcon"
                        android:textSize="@dimen/dp23" />

                    <TextView
                        android:id="@+id/txt_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:layout_marginBottom="@dimen/dp8"
                        android:gravity="center"
                        android:text="24.000 vnÄ‘"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/dp16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_sub_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp30"
                            android:background="@color/colorWhite"
                            android:src="@drawable/ic_remove_quantity" />

                        <TextView
                            android:id="@+id/txt_product_quantity"
                            android:layout_width="@dimen/dp100"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp4"
                            android:layout_marginRight="@dimen/dp4"
                            android:background="@drawable/custome_quantity_product"
                            android:gravity="center"
                            android:maxLength="2"
                            android:text="0"
                            android:textColor="@color/colorBottomIcon"
                            android:textSize="@dimen/dp20" />

                        <ImageView
                            android:id="@+id/btn_add_quantity"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:background="@color/colorWhite"
                            android:src="@drawable/ic_add" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>

</LinearLayout>